<script>
    $(document).ready(function () {
        $("#flip").click(function () {
            //$("#mb_m").css("display","block");
            var dp = $('#mb_m').css('display');
            if (dp == 'none') {
                $("#mb_m").css("display", "block");
            } else {
                $("#mb_m").css("display", "none");
            }
        });
        active_btn(1);
    });
    function active_btn(a) {
        if (a == 1) {
            if ($("#btn-" + a).hasClass("btn-active")) {
                $("#tab-" + a).css("display", "block");
                $("#tab-2").css("display", "none");
                $("#btn-2").removeClass("btn-active");
            } else {
                $("#btn-" + a).addClass("btn-active");
                $("#tab-" + a).css("display", "block");
                $("#tab-2").css("display", "none");
                $("#btn-2").removeClass("btn-active");
            }
        } else {
            if ($("#btn-" + a).hasClass("btn-active")) {
                $("#tab-" + a).css("display", "block");
                $("#tab-1").css("display", "none");
                $("#btn-1").removeClass("btn-active");
            } else {
                $("#btn-" + a).addClass("btn-active");
                $("#tab-" + a).css("display", "block");
                $("#tab-1").css("display", "none");
                $("#btn-1").removeClass("btn-active");
            }
        }

    }
    function sliderr(n) {

        var dis = $('#ss-' + n).css('display');
        if (dis == 'none') {
            $("#ss-" + n).css("display", "block");
            $("#sd-" + n).css("height", "auto");

        } else {
            $("#ss-" + n).css("display", "none");
            $("#sd-" + n).css("height", "0px");
        }

    }
    function list_ssdd(i) {
        var dis = $('#lss-' + i).css('display');

        if (dis == 'none') {
            $("#lss-" + i).css("display", "block");

            var styleElem = document.head.appendChild(document.createElement("style"));
            styleElem.innerHTML = ".sll-sm-text-" + i + "::before {content: '-';}";
        } else {
            $("#lss-" + i).css("display", "none");
            var styleElem = document.head.appendChild(document.createElement("style"));
            styleElem.innerHTML = ".sll-sm-text-" + i + "::before {content: '+';}";
        }
    }
    function slt_this_list(j) {
        $(".ssed").css("background-color", "#fff");
        var dis = $('#list-' + j).css('background-color');
        if (dis == '#fff' || dis == 'rgb(255, 255, 255)') {

            $("#list-" + j).css("background-color", "#ffff00");

        } else {

            $("#list-" + j).css("background-color", "#fff");
        }
    }
    function ss_l_menu() {
        if ($(".ss-btn").hasClass("ww-100")) {
            $(".ss-btn").removeClass("ww-100");
            $(".l-menu").animate({ "left": "-500px" }, 300, "swing");
            $(".ss-btn").animate({ "left": "0px" }, 300, "swing");
            $(".ss-btn").html('<i class="fas fa-chevron-right"></i>')
        } else {
            $(".ss-btn").addClass("ww-100");
            $(".l-menu").animate({ "left": "0px" }, 300, "swing");
            $(".ss-btn").animate({ "left": "400px" }, 300, "swing");
            $(".ss-btn").html('<i class="fas fa-chevron-left"></i>')
        }

    }
    function ss_r_menu() {
        if ($(".ss-r-btn").hasClass("ww-100")) {
            $(".ss-r-btn").removeClass("ww-100");
            $(".r-menu").animate({ "right": "-400px" }, 300, "swing");
            $(".ss-r-btn").animate({ "right": "0px" }, 300, "swing");
            $(".ss-r-btn").html('<i class="fas fa-chevron-left"></i>')
        } else {
            $(".ss-r-btn").addClass("ww-100");
            $(".r-menu").animate({ "right": "0px" }, 300, "swing");
            $(".ss-r-btn").animate({ "right": "600px" }, 300, "swing");
            $(".ss-r-btn").html('<i class="fas fa-chevron-right"></i>')
        }

    }
</script>