                                            $("#RiverArea").show();
                                            $("#BtnRiverArea").click(function () {
                                                var RiverArea = $("#selectRiverArea").find(":selected").val();
                                                if (RiverArea == "1") {
                                                    EIA();
                                                } else {
                                                    $("#WildArea").show();
                                                    $("#BtnWildArea").click(function () {
                                                        var WildArea = $("#selectWildArea").find(":selected").val();
                                                        if (WildArea == "1") {
                                                            Environment();
                                                        } else {
