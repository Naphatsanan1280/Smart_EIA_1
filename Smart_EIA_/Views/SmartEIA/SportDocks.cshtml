                                            $("#RiverArea").show();
                                            $("#BtnRiverArea").click(function () {
                                                var RiverArea = $("#selectRiverArea").find(":selected").val();
                                                if (RiverArea == "1") {
                                                    EIA();
                                                } else {
                                                    IEE();
                                                }
                                            });

