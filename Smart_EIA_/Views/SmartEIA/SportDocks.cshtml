                        $("#Btnok").click(function () {
                            $("#Area1").show();
                            $("#BtnArea1").click(function () {
                                var Area1 = $("#selectArea1").find(":selected").val();
                                if (Area1 == "1") {
                                    EIA();
                                }
                                else {
